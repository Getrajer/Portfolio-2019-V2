@page "/isPrime"
@inherits IsPrimeBase
<head>
    <link href="../css/AlgorithmsP1.css" rel="stylesheet" />
    <link href="../css/AlgorithmsP2.css" rel="stylesheet" />
</head>

<div class="description_container">
    <div class="content_container">
        <div class="title_container">
            <h2>Is prime</h2>
            <div class="heading_underline blinker"></div>
        </div>
        <p>This program is going to check if number is prime or not</p>
    </div>
</div>


<div class="program_container">
    <div class="row">
        <div class="col-md-3">
            <div class="program_start_container">
                <div class="input_container">
                    <h5>Enter a number: </h5>
                    <input @bind-value="number" @bind-value:event="oninput" />
                </div>
                <div class="start_container">
                    <button class="btn btn-primary" @onclick="isPrime">Check if prime</button>
                </div>
                <div class="info_container">
                    <span class="sucess">@success</span> <span class="error">@error</span>
                </div>
            </div>
        </div>

        <div class="col-md-9">
            <div class="output_container single_values">
                <h4>Is Prime:</h4>
                <p>@output</p>
            </div>
        </div>
    </div>
</div>