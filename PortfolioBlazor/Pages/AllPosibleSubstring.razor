@page "/All Possible Substings"
@inherits AllPosibleSubstringBase
<head>
    <link href="../css/AlgorithmsP1.css" rel="stylesheet" />
    <link href="../css/AlgorithmsP2.css" rel="stylesheet" />
</head>

<div class="description_container">
    <div class="content_container">
        <div class="title_container">
            <h2>All Possible substrings</h2>
            <div class="heading_underline blinker"></div>
        </div>
        <p>This program will return all possible substrings of a string</p>
    </div>
</div>




<div class="program_container">
    <div class="row">
        <div class="col-md-3">
            <div class="program_start_container">
                <div class="input_container">
                    <h5>Enter something: </h5>
                    <input @bind-value="str" @bind-value:event="oninput" />
                </div>
                <div class="start_container">
                    <button class="btn btn-primary" @onclick="AllPossibleSubstrings">Find all possible substrings</button>
                </div>
                <div class="info_container">
                    <span class="sucess">@success</span> <span class="error">@error</span>
                </div>
            </div>
        </div>

        <div class="col-md-9">
            <div class="output_container single_values">
                <h4>All Possible Substrings: </h4>

                @foreach (var s in substringsList)
                {
                    <p>@s.Substring</p>
                }
            </div>
        </div>
    </div>
</div>
